<mvc:View xmlns:mvc="sap.ui.core.mvc"
          controllerName="project1.controller.JsonModel"
          xmlns="sap.m"
          xmlns:l="sap.ui.layout">
          <Table items="{empModel>/employees}">
    <columns>
        <Column>
            <Text text="Name"/>
        </Column>
        <Column>
            <Text text="City"/>
        </Column>
    </columns>
    <items>
        <ColumnListItem>
            <cells>
                <Text text="{empModel>name}"/>
                <Text text="{empModel>city}"/>
            </cells>
        </ColumnListItem>
    </items>
</Table>

</mvc:View>